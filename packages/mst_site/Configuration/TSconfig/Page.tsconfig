#################### Extension news #################
## add an alternative layout for latest news
tx_news.templateLayouts {
    1 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:mst_site.news.template.1
    2 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:mst_site.news.template.2
}

TCEMAIN {
    ## Linkhandler for news
    ## Quelle: https://usetypo3.com/linkhandler.html
    linkHandler.tx_news {
        handler = TYPO3\CMS\Recordlist\LinkHandler\RecordLinkHandler
        label = News
        configuration {
            table = tx_news_domain_model_news
            storagePid = {$mst_site.newsStartingPoints}
            hidePageTree = 0
        }

        scanAfter = page
    }

    ## Preview for news records
    preview {
        tx_news_domain_model_news {
            # Available with latest 8.7+ only
            # see https://forge.typo3.org/issues/78336
            useCacheHash = 1
            ##PageId single view
            previewPageId = 4
            useDefaultLanguageRecord = 0
            fieldToParameterMap {
                uid = tx_news_pi1[news_preview]
            }

            additionalGetParameters {
                tx_news_pi1.controller = News
                tx_news_pi1.action = detail
            }
        }
    }
}

