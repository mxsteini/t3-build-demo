TCEFORM {
    pages {
        ##remove option to choose no backend layout
        backend_layout.removeItems = -1
        backend_layout_next_level.removeItems = -1
    }

    tt_content {
        #################### CType #################
        CType {
            ##remove content types, for all users incl. Admins
            #removeItems = text,textpic,div,header,table,bullets,menu_categorized_pages,menu_recently_updated,menu_related_pages
        }

        #################### headers #################
        header_layout {
            altLabels {
                0 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:header1
                1 =
                2 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:header2
                3 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:header3
                4 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:header4
                5 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:header5
            }

            removeItems = 1
        }

        #################### textmedia textpic image #################
        ## remove width and height fields for responsive images
        imagewidth.disabled = 1
        imageheight.disabled = 1
        ## max. 4 cols for images in content elements
        imagecols.removeItems = 5,6,7,8
        imageorient {
            disableNoMatchingValueElement = 1
            ##use only needed image positions. All: 0,1,2,8,9,10,17,18,25,26
            types {
                textmedia.keepItems = 0,8,17,18,25,26
                textpic.keepItems = 0,8,17,18,25,26
            }
        }

        #################### layout options #################
        ## Layout-Feld erweitern
        layout {
            ## ggf. Eintraege entfernen
            removeItems = 1,2,3
            addItems {
                100 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:mst_site.tt_content.layout.100
            }

            ## layout option image gallery
            types {
                textmedia {
                    addItems {
                        200 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:mst_site.tt_content.layout.200
                    }
                }

                textpic {
                    addItems {
                        200 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:mst_site.tt_content.layout.200
                    }
                }

                image {
                    addItems {
                        200 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:mst_site.tt_content.layout.200
                    }
                }


                menu_abstract {
                    removeItems = 1,2,3,100
                    addItems {
                        251 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:mst_site.tt_content.layout.251
                    }
                }

                menu_pages {
                    removeItems = 1,2,3,100
                    addItems {
                        251 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:mst_site.tt_content.layout.251
                    }
                }

                menu_subpages {
                    removeItems = 1,2,3,100
                    addItems {
                        251 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:mst_site.tt_content.layout.251
                    }
                }

                cols_2 {
                    removeItems = 1,2,3,100
                    addItems {
                        300 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:mst_site.tt_content.layout.300
                    }
                }

                cols_3 {
                    removeItems = 1,2,3,100
                    addItems {
                        300 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:mst_site.tt_content.layout.300
                    }
                }

                cols_4 {
                    removeItems = 1,2,3,100
                    addItems {
                        300 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:mst_site.tt_content.layout.300
                    }
                }
            }
        }

        #################### frame_class options #################
        frame_class {
            #label {
            #default =
            #de =
            #}
            #altLabels {
            #  default =
            #}
            #removeItems = indent,indent-left,indent-right,none,ruler-before,ruler-after
            addItems {
                custom-30 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:tt_content.frameclass.custom-30
                custom-31 = LLL:EXT:mst_site/Resources/Private/Language/locallang.xlf:tt_content.frameclass.custom-31
            }

            types {
                shortcut {
                    removeItems = custom-30, custom-31
                }
            }
        }

        #################### space options #################
        space_before_class {
            removeItems = extra-small,extra-large
        }

        space_after_class {
            removeItems = extra-small,extra-large
        }
    }
}

